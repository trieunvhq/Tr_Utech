<?xml version="1.0" encoding="utf-8" ?>
<Application
    x:Class="QRMS.App"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:constants="clr-namespace:QRMS.Constants"
    xmlns:helper="clr-namespace:QRMS.Helper"
    xmlns:local="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    xmlns:resource="clr-namespace:QRMS.Resources"
    xmlns:style="clr-namespace:QRMS.Styles">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <style:GlobalStyles />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="UrlStyle" TargetType="Button">
                <Setter Property="VerticalOptions" Value="CenterAndExpand" />
                <Setter Property="HorizontalOptions" Value="CenterAndExpand" />
                <Setter Property="BackgroundColor" Value="Transparent" />
                <Setter Property="TextColor" Value="#1D1D1F" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="FontAttributes" Value="Bold" />
            </Style>

            <ControlTemplate x:Key="ContentPageTemplate">
                <AbsoluteLayout>
                    <Grid AbsoluteLayout.LayoutBounds=".5,.5,1,1.6" AbsoluteLayout.LayoutFlags="All">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Label BackgroundColor="#FFDA9F" Grid.Row="0"/>
                        <Label BackgroundColor="White" Grid.Row="1"/>

                    </Grid>
                    <StackLayout Spacing="0" AbsoluteLayout.LayoutBounds=".5,.5,1,1" AbsoluteLayout.LayoutFlags="All">
                        <local:PancakeView
                        BackgroundGradientAngle="0"
                        BackgroundGradientEndColor="#FAFDFF"
                        BackgroundGradientStartColor="#FFDA9F"
                        HasShadow="False"
                        HeightRequest="65"
                        MinimumHeightRequest="65">
                            <Grid HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="4*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="40" />
                                </Grid.RowDefinitions>
                                <Label
                                Grid.Row="1"
                                Grid.Column="1"
                                FontAttributes="Bold"
                                HorizontalTextAlignment="Center"
                                Text="{x:Static constants:MySettings.Title}"
                                VerticalTextAlignment="Center">
                                    <Label.FontSize>
                                        <OnIdiom
                                        x:TypeArguments="x:Double"
                                        Phone="15"
                                        Tablet="17" />
                                    </Label.FontSize>
                                </Label>
                                <ImageButton
                                Grid.Row="1"
                                Grid.Column="0"
                                Padding="0"
                                BackgroundColor="Transparent"
                                Command="{TemplateBinding BindingContext.BackCommand}"
                                HorizontalOptions="Start"
                                Source="left_arrow.png">
                                    <ImageButton.Margin>
                                        <OnPlatform x:TypeArguments="Thickness">
                                            <On Platform="Android" Value="20,12,0,12" />
                                            <On Platform="iOS" Value="16,10,0,10" />
                                        </OnPlatform>
                                    </ImageButton.Margin>
                                </ImageButton>
                                <ImageButton
                                Grid.Row="1"
                                Grid.Column="2"
                                Padding="0"
                                BackgroundColor="Transparent"
                                Command="{TemplateBinding BindingContext.NextCommand}"
                                HorizontalOptions="End"
                                Rotation="180"
                                Source="left_arrow.png">
                                    <ImageButton.Margin>
                                        <OnPlatform x:TypeArguments="Thickness">
                                            <On Platform="Android" Value="0,12,20,12" />
                                            <On Platform="iOS" Value="0,10,16,10" />
                                        </OnPlatform>
                                    </ImageButton.Margin>
                                </ImageButton>
                                <Button
                                Grid.Row="1"
                                Grid.Column="0"
                                Padding="0"
                                BackgroundColor="Transparent"
                                Command="{TemplateBinding BindingContext.BackCommand}" />
                                <Button
                                Grid.Row="1"
                                Grid.Column="2"
                                Padding="0"
                                BackgroundColor="Transparent"
                                Command="{TemplateBinding BindingContext.NextCommand}" />
                            </Grid>
                        </local:PancakeView>
                        <ContentPresenter VerticalOptions="FillAndExpand" />
                    </StackLayout>
                </AbsoluteLayout>
            </ControlTemplate>

