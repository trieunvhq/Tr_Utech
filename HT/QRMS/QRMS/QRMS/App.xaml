                                    Margin="0,0,15,0"
                                    HeightRequest="22"
                                    HorizontalOptions="EndAndExpand"
                                    Source="logo_navigation.png"
                                    VerticalOptions="CenterAndExpand" />
                                </StackLayout>
                            </Grid>
                        </local:PancakeView>
                        <ContentPresenter VerticalOptions="FillAndExpand" />
                    </StackLayout>
                </AbsoluteLayout>

