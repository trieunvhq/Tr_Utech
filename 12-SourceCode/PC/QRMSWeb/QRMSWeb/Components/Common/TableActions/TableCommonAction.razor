<div class="d-flex align-items-center">
    @if (ShowDetail)
    {
        <button @onclick="OnClickDetail" type="button"
                class="btn btn-sm btn-outline-success waves-effect waves-light mr-2 table-action-button !important"
                data-toggle="tooltip" data-placement="bottom" title="Xem chi tiết">
            <span>
                <i style="font-size: 18px;" class="mdi mdi-menu"></i>
            </span>
        </button>
    }
    @if (ShowActualScanDetail)
    {
        <button @onclick="OnClickActualScanDetail" type="button"
                class="btn btn-sm btn-outline-success waves-effect waves-light mr-2 table-action-button !important"
                data-toggle="tooltip" data-placement="bottom" title="Xem chi tiết thực tế scan">
            <span>
                <i style="font-size: 18px;" class="mdi mdi-drag"></i>
            </span>
        </button>
    }

    @if (ShowEdit)
    {
        <button @onclick="OnClickUpdate" type="button"
                class="btn btn-sm btn-outline-primary waves-effect waves-light mr-2 table-action-button"
                data-toggle="tooltip" data-placement="bottom" title="Cập nhật">
            <span>
                <i style="font-size: 16px;" class="mdi mdi-square-edit-outline"></i>
            </span>
        </button>
    }
    @if (ShowDelete)
    {
        <button @onclick="OnClickDelete" type="button"
                class="btn btn-sm btn-outline-danger waves-effect waves-light mr-2 table-action-button"
                data-toggle="tooltip" data-placement="bottom" title="Xóa">
            <span>
                <i style="font-size: 16px;" class="mdi mdi mdi-delete"></i>
            </span>
        </button>
    }
    @if (ShowRenewals)
    {
        <button @onclick="OnClickRenewals" type="button"
                class="btn btn-sm btn-outline-primary waves-effect waves-light mr-2 table-action-button"
                data-toggle="tooltip" data-placement="bottom" title="Tái tục">
            <span>
                <i style="font-size: 16px;" class="mdi mdi-recycle"></i>
            </span>
        </button>
    }
    @if (ShowExportExcel)
    {
        <button @onclick="OnClickExportExcel" type="button"
                class="btn btn-sm btn-outline-success waves-effect waves-light mr-2 table-action-button"
                data-toggle="tooltip" data-placement="bottom" title="Xuất excel">
            <span>
                <i style="font-size: 18px;" class="mdi mdi-file-excel"></i>
            </span>
        </button>
    }
</div>

@code {

    [Parameter]
    public bool ShowDetail { get; set; } = true;

    [Parameter]
    public bool ShowActualScanDetail { get; set; } = false;

    [Parameter]
    public bool ShowEdit { get; set; } = true;

    [Parameter]
    public bool ShowDelete { get; set; } = true;

    [Parameter]
    public bool ShowRenewals { get; set; } = false;

    [Parameter]
    public bool ShowLock { get; set; } = false;

    [Parameter]
    public bool ShowUnlock { get; set; } = false;

    [Parameter]
    public bool ShowExportExcel { get; set; } = false;

    [Parameter]
    public Action OnClickExportExcel { get; set; }

    [Parameter]
    public Action OnClickDetail { get; set; }

    [Parameter]
    public Action OnClickActualScanDetail { get; set; }

    [Parameter]
    public Action OnClickUpdate { get; set; }

    [Parameter]
    public Action OnClickDelete { get; set; }

    [Parameter]
    public Action OnClickRenewals { get; set; }

    [Parameter]
    public Action OnClickLock { get; set; }

    [Parameter]
    public Action OnClickUnlock { get; set; }

}